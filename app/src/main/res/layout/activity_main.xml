<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_border_edge"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btn_undo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_toggle"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_undo" />

        <ImageButton
            android:id="@+id/btn_redo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_toggle"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_redo" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/darker_gray" />

        <ImageButton
            android:id="@+id/btn_pencil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_toggle"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_pencil" />

        <ImageButton
            android:id="@+id/btn_color_palette"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_toggle"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_color_palette" />

        <ImageButton
            android:id="@+id/btn_eraser"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/bg_toggle"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_eraser" />

    </LinearLayout>

    <com.jv.samsungnotedrawpen.DrawingBoard
        android:id="@+id/board"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_border_edge" />
</LinearLayout>